{
    "manifestVersion": 1,
    "id": "repo-board",
    "publisher": "ovantol",
    "version": "0.1.1",
    "name": "repo-board",
    "description": "Branch and pull request overview for Azure DevOps",
    "demands": ["api-version/5.0"],
    "scopes": ["vso.code_manage"],
    "public": true,
    "repository": {
        "type": "git",
        "uri": "https://github.com/oscarvantol/repo-board"
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    "screenshots": [{
        "path": "screenshots/screenshot1.png"
      }
    ],
    "categories": [
        "Azure Repos"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "images/repo-board.png"
    },
    "contributions": [
        {
            "id": "my-hub",
            "type": "ms.vss-web.hub",
        
            "targets": [
                "ms.vss-code-web.code-hub-group"
            ],
            "properties": {
                "name": "RepoBoard",
                "icon": "images/repo-board.png",
                "uri": "app/index.html"
            }
        }
    ],
    "files": [
        {
            "path": "app",
            "addressable": true,
            "packagePath": "app"
        },
        {
            "path": "images/repo-board.png",
            "addressable": true
        }       
    ]
}